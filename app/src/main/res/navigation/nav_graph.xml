<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.playmatch.ui.auth.LoginFragment"
        android:label="Iniciar Sesión"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_discoveryFragment"
            app:destination="@id/discoveryFragment" />
        <action
            android:id="@+id/action_loginFragment_to_profileSetupFragment"
            app:destination="@id/profileSetupFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.playmatch.ui.auth.RegisterFragment"
        android:label="Registro"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_profileSetupFragment"
            app:destination="@id/profileSetupFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_registerFragment_to_verificationFragment"
            app:destination="@id/verificationFragment">
            <argument
                android:name="userId"
                app:argType="string" />
            <argument
                android:name="email"
                app:argType="string" />
            <argument
                android:name="phoneNumber"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.example.playmatch.ui.auth.VerificationFragment"
        android:label="Verificación"
        tools:layout="@layout/fragment_verification">
        <argument
            android:name="userId"
            app:argType="string" />
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <action
            android:id="@+id/action_verificationFragment_to_profileSetupFragment"
            app:destination="@id/profileSetupFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/profileSetupFragment"
        android:name="com.example.playmatch.ui.profile.ProfileSetupFragment"
        android:label="Configurar Perfil"
        tools:layout="@layout/fragment_profile_setup">
        <argument
            android:name="userId"
            app:argType="string" />
        <action
            android:id="@+id/action_profileSetupFragment_to_discoveryFragment"
            app:destination="@id/discoveryFragment" />
        <action
            android:id="@+id/action_profileSetupFragment_to_photoUploadFragment"
            app:destination="@id/photoUploadFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_profileSetupFragment_to_profileFragment"
            app:destination="@id/profileFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/photoUploadFragment"
        android:name="com.example.playmatch.ui.profile.PhotoUploadFragment"
        android:label="Subir Fotos"
        tools:layout="@layout/fragment_photo_upload">
        <argument
            android:name="userId"
            app:argType="string" />
        <action
            android:id="@+id/action_photoUploadFragment_to_discoveryFragment"
            app:destination="@id/discoveryFragment" />
    </fragment>

    <fragment
        android:id="@+id/discoveryFragment"
        android:name="com.example.playmatch.ui.discovery.DiscoveryFragment"
        android:label="Descubrir"
        tools:layout="@layout/fragment_discovery">
        <action
            android:id="@+id/action_discoveryFragment_to_chatsFragment"
            app:destination="@id/chatsFragment" />
        <action
            android:id="@+id/action_discoveryFragment_to_profileFragment"
            app:destination="@id/profileFragment">
            <argument
                android:name="userId"
                app:argType="string"
                app:nullable="true" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.playmatch.ui.profile.ProfileFragment"
        android:label="Mi Perfil"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_profileFragment_to_photoUploadFragment"
            app:destination="@id/photoUploadFragment">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.playmatch.ui.profile.EditProfileFragment"
        android:label="Editar Perfil"
        tools:layout="@layout/fragment_edit_profile">
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.example.playmatch.ui.chat.ChatsFragment"
        android:label="Chats"
        tools:layout="@layout/fragment_chats">
        <action
            android:id="@+id/action_chatsFragment_to_chatDetailFragment"
            app:destination="@id/chatDetailFragment">
            <argument
                android:name="chatId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/chatDetailFragment"
        android:name="com.example.playmatch.ui.chat.ChatDetailFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat_detail">
        <argument
            android:name="chatId"
            app:argType="string" />
    </fragment>

</navigation>



